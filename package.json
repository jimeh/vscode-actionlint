{
  "name": "vscode-actionlint",
  "displayName": "actionlint",
  "description": "Lint GitHub Actions workflow files using actionlint",
  "version": "0.0.1",
  "publisher": "jimeh",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimeh/vscode-actionlint.git"
  },
  "engines": {
    "vscode": "^1.95.0"
  },
  "categories": [
    "Linters"
  ],
  "keywords": [
    "github actions",
    "actionlint",
    "lint",
    "workflow",
    "yaml",
    "ci",
    "cd"
  ],
  "activationEvents": [
    "workspaceContains:.github/workflows",
    "onLanguage:github-actions-workflow"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "actionlint",
      "properties": {
        "actionlint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable actionlint linting."
        },
        "actionlint.executable": {
          "type": "string",
          "default": "actionlint",
          "description": "Path to the actionlint binary."
        },
        "actionlint.runTrigger": {
          "type": "string",
          "enum": [
            "onSave",
            "onType"
          ],
          "default": "onSave",
          "description": "When to run actionlint: on file save or on typing (with debounce)."
        },
        "actionlint.additionalArgs": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Additional arguments to pass to actionlint."
        },
        "actionlint.debounceDelay": {
          "type": "number",
          "default": 300,
          "minimum": 50,
          "maximum": 5000,
          "description": "Debounce delay in milliseconds for onType trigger mode."
        },
        "actionlint.logLevel": {
          "type": "string",
          "enum": [
            "off",
            "info",
            "debug"
          ],
          "default": "off",
          "description": "Output channel logging verbosity."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "check-types": "tsc --noEmit",
    "lint": "oxlint src",
    "lint:fix": "oxlint --fix src",
    "format": "oxfmt src esbuild.js",
    "format:check": "oxfmt --check src esbuild.js",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.95.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "npm-run-all": "^4.1.5",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "typescript": "^5.9.3"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
